@{
    Layout = null;
}
@using ShoppingCart.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Products List</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Buy</th>
        </tr>
        @foreach (Product product in ViewBag.products)
        {
	    <tr>
		    <td>@product.Id</td>
		    <td>@product.Name</td>
		    <td>@product.Price</td>

		    @using (Html.BeginForm("AddToCart", "Cart", new { id = product.Id }, FormMethod.Post))
		    {
			    <td>
				    <input type="number" name="quantity" value="1" min="1" />
                </td>
                <td>
				    <button type="submit" name="">Add</button>
			    </td>
            }
			
		</tr>
        }
    </table>

</body></html>